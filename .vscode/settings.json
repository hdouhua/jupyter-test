{
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "yapf",
    // append the root of module here
    "python.pythonPath": "/Users/user/miniconda3/envs/fine/bin/python",
    "python.autoComplete.extraPaths": [
        "./c01/SearchEngine",
        "./c01/ModuleTest/simple",
        "./c01/ModuleTest/abspath",
    ],
    "python.envFile": "${workspaceFolder}/c01/.env",
    // configure code-runner
    "code-runner.executorMap": {
        "python": "export $(cat c01/.env); python -u"
    },
    "code-runner.runInTerminal": true,
    // "code-runner.clearPreviousOutput": true,
    // "code-runner.enableAppInsights": true
    "jupyter.jupyterServerType": "local"
}